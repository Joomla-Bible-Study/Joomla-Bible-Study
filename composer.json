{
  "name": "joomla-bible-study/joomla-bible-study",
  "type": "project",
  "description": "CWM Proclaim",
  "keywords": [
	"bible",
	"biblestudy",
	"joomlabiblestudy"
  ],
  "homepage": "https://github.com/Joomla-Bible-Study/Joomla-Bible-Study",
  "license": "GPL-2.0-or-later",
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "config": {
	"optimize-autoloader": true,
	"platform": {
	  "php": "7.0.0"
	},
	"vendor-dir": "libraries/vendor"
  },
  "support": {
	"issues": "https://www.christianwebministries.org/issues",
	"irc": "https://irc.lc/freenode/cwmsupport/",
	"forum": "https://www.christianwebministries.org/forum",
	"docs": "https://www.christianwebministries.org/docs"
  },
  "require": {
	"php": ">=7.0.0",
	"ircmaxell/password-compat": "1.*",
	"leafo/lessphp": "0.5.0",
	"paragonie/sodium_compat": "1.9.1",
	"phpmailer/phpmailer": "*",
	"symfony/polyfill-php71": "~1.9",
	"symfony/polyfill-php73": "~1.9",
	"symfony/yaml": "2.*",
	"simplepie/simplepie": "1.3.1",
	"google/recaptcha": "^1.1",
	"typo3/phar-stream-wrapper": "^2.1",
	"ext-mbstring": "*",
	"ext-simplexml": "*"
  },
  "require-dev": {
	"roave/security-advisories": "dev-master",
	"phing/phing": "^2.9",
	"pdepend/pdepend": "^2.4",
	"phpmd/phpmd": "^2.4",
	"mayflower/php-codebrowser": "^1.1",
	"sebastian/phpcpd": "^3.0",
	"pear/versioncontrol_git": "dev-master",
	"pear/pear_exception": "dev-master",
	"phpunit/phpunit": "^4.8.35",
	"friendsofphp/php-cs-fixer": "2.*.*",
	"squizlabs/php_codesniffer": "^2.8.0",
	"pear/cache_lite": "1.7.16"
  },
  "extra": {
	"branch-alias": {
	  "dev-master": "2.x-dev"
	}
  },
  "scripts": {
	"phpcs": "phpcs --standard=CWM",
	"post-install-cmd": "\"libraries/vendor/bin/phpcs\" --config-set installed_paths build/coding-standards,libraries/vendor/squizlabs/php_codesniffer/CodeSniffer/Standards",
	"post-update-cmd": "\"libraries/vendor/bin/phpcs\" --config-set installed_paths build/coding-standards,libraries/vendor/squizlabs/php_codesniffer/CodeSniffer/Standards"
  }
}
