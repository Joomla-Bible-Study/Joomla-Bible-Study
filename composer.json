{
  "name": "joomla-bible-study/joomla-bible-study",
  "type": "project",
  "description": "CWM Proclaim",
  "keywords": [
    "bible",
    "biblestudy",
    "joomlabiblestudy"
  ],
  "homepage": "https://github.com/Joomla-Bible-Study/Joomla-Bible-Study",
  "license": "GPL-2.0+",
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "config": {
    "platform": {
      "php": "5.6.40"
    },
    "bin-dir": "vendor/bin"
  },
  "require": {
    "php": ">=5.6.40",
    "joomla/application": "~1.9",
    "joomla/archive": "~1.1.5",
    "joomla/data": "~1.2",
    "joomla/di": "~1.5",
    "joomla/event": "~1.2",
    "joomla/filter": "^1.3.2",
    "joomla/image": "^1.5",
    "joomla/input": "~1.3",
    "joomla/ldap": "~1.2",
    "joomla/registry": "^1.6",
    "joomla/session": "^1.3.4",
    "joomla/string": "^1.4",
    "joomla/uri": "~1.2",
    "joomla/utilities": "^1.6",
    "paragonie/random_compat": "~1.4",
    "paragonie/sodium_compat": "~1.6",
    "phpmailer/phpmailer": "^5.2.20",
    "symfony/polyfill-php55": "~1.9",
    "symfony/polyfill-php56": "~1.9",
    "symfony/polyfill-php71": "~1.9",
    "symfony/polyfill-php73": "~1.9",
    "symfony/yaml": "2.*",
    "simplepie/simplepie": "1.3.1",
    "google/recaptcha": "^1.1",
    "typo3/phar-stream-wrapper": "^2.1",
    "phpdocumentor/phpdocumentor": "2.*",
    "ircmaxell/password-compat": "1.*",
    "leafo/lessphp": "0.5.0",
    "roave/security-advisories": "dev-master",
    "ext-json": "*"
  },
  "require-dev": {
    "phing/phing": "^2.9",
    "pdepend/pdepend": "^2.4",
    "phpmd/phpmd": "^2.4",
    "phploc/phploc": "^4.0",
    "mayflower/php-codebrowser": "^1.1",
    "sebastian/phpcpd": "^3.0",
    "pear/versioncontrol_git": "dev-master",
    "pear/pear_exception": "dev-master",
    "joomla/coding-standards": "^2.0",
    "phpunit/phpunit": "^4.8.35",
    "phpunit/dbunit": "~1.3",
    "friendsofphp/php-cs-fixer": "~1.11",
    "squizlabs/php_codesniffer": "^2.8.0",
    "pear/cache_lite": "1.7.16"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.x-dev"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=joomla",
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../..",
    "post-update-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths ../../.."
  }
}
