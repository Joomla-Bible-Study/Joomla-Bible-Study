    <creationDate>February 10, 2012</creationDate>
    <description>JBS_INS_XML_DESCRIPTION</description>

    <!-- Runs on install/uninstall/update; New in 1.7 -->
	<scriptfile>biblestudy.script.php</scriptfile>

    	<!-- SQL Files -->
    <install> <!-- Runs on install -->
        <sql>
            <file charset="utf8" driver="mysql">install/sql/install.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8" folder="sql">install/sql/uninstall.sql</file>
        </sql>
    </uninstall>
    <update> <!-- Runs on update; New in 1.6 -->
        <schemas>
            <schemapath type="mysql">install/sql/updates/mysql</schemapath>
        </schemas>
    </update>

  <!-- Front end file, media and language specification -->
  <!-- <filename>biblestudy.xml</filename> -->

    <files folder="site">
        <filename>index.html</filename>
        <filename>biblestudy.php</filename>
        <filename>controller.php</filename>
        <filename>convert1.htm</filename>
        <filename>router.php</filename>
        <folder>sef_ext</folder>
        <folder>views</folder>
        <folder>models</folder>
        <folder>language</folder>
        <folder>tables</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
        <folder>lib</folder>

    </files>

  <!-- Need to start using this move to this on version 7.1.0
  	<media destination="com_biblestudy">
		<filename>com_beta.jpg</filename>
	</media>
	-->

  	<!-- Media files -->
    <media destination="com_biblestudy" folder="media">
		<folder>images</folder>
		<folder>js</folder>
		<folder>backup</folder>
                <folder>captcha</folder>
                <folder>css</folder>
                <folder>legacyplayer</folder>
                <folder>player</folder>
                <filename>index.html</filename>
    </media>

