<?xml version="1.0" encoding="utf-8"?>
<form>
    <field name="published" type="radio" label="JBS_CMN_PUBLISHED" description="JBS_CMN_PUBLISHED_DESC" class="inputbox" default="1" required="true">
        <option value="0">JBS_CMN_NO</option>
        <option value="1">JBS_CMN_YES</option>
    </field>
    <field name="series_text" type="text" label="JBS_SER_SERIES_NAME" description="JBS_SER_SERIES_NAME_DESC" size="50" />
    <field name="teacher" type="sql" extension="com_biblestudy"
		label="JBS_CMN_TEACHER" description="JBS_STY_TEACHER_DESC"
                class="inputbox" query="SELECT id, teachername FROM #__bsms_teachers WHERE published = 1 ORDER by teachername ASC" key_field="id" value_field="teachername">
        <option value="-1">JBS_CMN_SELECT_TEACHER</option>
    </field>
    <field name="description" type="Editor" class="inputbox" buttons="true" height="300" label="JBS_CMN_DESCRIPTION" description="JBS_CMN_DESCRIPTION_DESC" />
    <field name="series_thumbnail" type="media" size="46" label="JBS_SER_SERIES_THUMBNAIL_IMAGE" description="JBS_SER_SERIES_THUMBNAIL_IMAGE_DESC"/>
    <field name="asset_id" type="hidden" filter="unset" />
</form>