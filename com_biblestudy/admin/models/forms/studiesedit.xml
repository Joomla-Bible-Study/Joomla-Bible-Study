<?xml version="1.0" encoding="utf-8"?>
<form>
    <field name="published" type="radio" label="JBS_CMN_PUBLISHED" description="JBS_CMN_PUBLISHED_DESC" class="inputbox" default="0" required="true">
        <option value="0">JBS_CMN_NO</option>
        <option value="1">JBS_CMN_YES</option>
    </field>

    <field name="studydate" type="calendar" label="JBS_CMN_STUDY_DATE"
           description="JBS_MED_CREATE_DATE_YMD_HMS_DESC" class="inputbox" size="22"
           format="%Y-%m-%d %H:%M:%S" filter="user_utc" required="true"/>
    
    <field name="comments" type="radio" label="JBS_CMN_COMMENTS" description="JBS_STY_COMMENTS_DESC" class="inputbox" default="0">
        <option value="0">JBS_CMN_NO</option>
        <option value="1">JBS_CMN_YES</option>
    </field>

    <field name="user_id" type="user" label="JBS_CMN_SUBMITTED_BY" description="JBS_STY_SUBMITTED_BY_DESC"/>

    <field name="studytitle" type="text" class="inputbox" size="60" label="JBS_CMN_TITLE" description="JBS_STY_TITLE_DESC"/>

    <field name="studyintro" type="textarea" cols="57" rows="3" class="inputbox" label="JBS_CMN_DESCRIPTION" description="JBS_STY_DESCRIPTION_DESC"/>

    <field name="studynumber" type="text" class="inputbox" size="8" label="JBS_CMN_STUDYNUMBER" desciption="JBS_STY_STUDYNUMBER_DESC"/>

    <field name="booknumber" type="SQL" class="inputbox" label="JBS_CMN_BOOK" query="SELECT booknumber, bookname FROM #__bsms_books WHERE published = 1 ORDER BY booknumber ASC" key_field="booknumber" value_field="bookname">
        <option value="-1">JBS_CMN_SELECT_BOOK</option>
    </field>
    
    <field name="chapter_begin" type="text" class="inputbox" size="5" label="JBS_STY_CHAPTER_BEGIN" desciption="JBS_STY_SCRIPTURE_DESC"/>
    <field name="verse_begin" type="text" class="inputbox" size="5" label="JBS_STY_VERSE_BEGIN"/>
    <field name="chapter_end" type="text" class="inputbox" size="5" label="JBS_STY_CHAPTER_END" desciption="JBS_STY_SCRIPTURE_DESC"/>
    <field name="verse_end" type="text" class="inputbox" size="5" label="JBS_STY_VERSE_END" desciption="JBS_STY_SCRIPTURE_DESC"/>

    <field name="booknumber2" type="SQL" class="inputbox" label="JBS_STY_BOOK2" query="SELECT booknumber, bookname FROM #__bsms_books WHERE published = 1 ORDER BY booknumber ASC" key_field="booknumber" value_field="bookname">
        <option value="-1">JBS_CMN_SELECT_BOOK</option>
    </field>
    <field name="chapter_begin2" type="text" class="inputbox" size="5" label="JBS_STY_CHAPTER_BEGIN2" desciption="JBS_STY_SCRIPTURE_DESC"/>
    <field name="verse_begin2" type="text" class="inputbox" size="5" label="JBS_STY_VERSE_BEGIN2"/>
    <field name="chapter_end2" type="text" class="inputbox" size="5" label="JBS_STY_CHAPTER_END2" desciption="JBS_STY_SCRIPTURE_DESC"/>
    <field name="verse_end2" type="text" class="inputbox" size="5" label="JBS_STY_VERSE_END2" desciption="JBS_STY_SCRIPTURE_DESC"/>

    <field name="secondary_reference" type="text" class="inputbox" size="100" label="JBS_CMN_SECONDARY_REFERENCES" desciption="JBS_STY_SECONDARY_REFERENCES_DESC"/>

    <field name="media_hours" type="text" class="inputbox" size="5" label="JBS_CMN_HOURS"/>
    <field name="media_minutes" type="text" class="inputbox" size="5" label="JBS_CMN_MINUTES" />
    <field name="media_seconds" type="text" class="inputbox" size="5" label="JBS_CMN_SECONDS"/>

    <field name="teacher_id" type="sql" extension="com_biblestudy"
		label="JBS_CMN_TEACHER" description="JBS_STY_TEACHER_DESC"
                class="inputbox" query="SELECT id, teachername FROM #__bsms_teachers WHERE published = 1 ORDER by teachername ASC" key_field="id" value_field="teachername">
        <option value="-1">JBS_CMN_SELECT_TEACHER</option>
    </field>

    <field name="location_id" type="sql" extension="com_biblestudy"
		label="JBS_CMN_LOCATION" description="JBS_STY_LOCATION_DESC"
                class="inputbox" query="SELECT id, location_text FROM #__bsms_locations WHERE published = 1 ORDER by location_text ASC" key_field="id" value_field="location_text">
        <option value="-1">JBS_CMN_SELECT_LOCATION</option>
    </field>

    <field name="series_id" type="sql" extension="com_biblestudy"
		label="JBS_CMN_SERIES" description="JBS_STY_SERIES_DESC"
                class="inputbox" query="SELECT id, series_text FROM #__bsms_series WHERE published = 1 ORDER by series_text ASC" key_field="id" value_field="series_text">
        <option value="-1">JBS_CMN_SELECT_SERIES</option>
    </field>

    <field name="topics_id" type="sql" extension="com_biblestudy"
		label="JBS_CMN_TOPIC" description="JBS_STY_TOPIC_DESC"
                class="inputbox" query="SELECT id, topic_text FROM #__bsms_topics WHERE published = 1 ORDER by topic_text ASC" key_field="id" value_field="topic_text">
        <option value="-1">JBS_CMN_SELECT_TOPIC</option>
    </field>

    <field name="messagetype" type="sql" extension="com_biblestudy"
		label="JBS_CMN_MESSAGE_TYPE" description="JBS_STY_MESSAGE_TYPE_DESC"
                class="inputbox" query="SELECT id, message_type FROM #__bsms_message_type WHERE published = 1 ORDER by message_type ASC" key_field="id" value_field="message_type">
        <option value="-1">JBS_CMN_SELECT_MESSAGE_TYPE</option>
    </field>

    <field name="thumbnailm" type="media" size="46" label="JBS_STY_STUDY_IMAGE" description="JBS_STY_STUDY_IMAGE_DESC"/>

   	<field name="studytext" type="editor" class="inputbox"
			label="JBS_STY_STUDY_TEXT" description="JBS_STY_STUDY_TEXT_DESC"
			filter="BibleStudyHelper::filterText" buttons="true" />

	<field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="false" class="inputbox" filter="rules"
			component="com_biblestudy" section="studiesedit" validate="rules"
		/>
	<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
	description="JFIELD_ACCESS_DESC" class="inputbox" size="1" />
</form>