<?xml version="1.0" encoding="utf-8"?>
<form>
    <field name="published" type="radio" label="JBS_CMN_PUBLISHED" description="JBS_CMN_PUBLISHED_DESC" class="inputbox" default="0" required="true">
        <option value="0">JBS_CMN_NO</option>
        <option value="1">JBS_CMN_YES</option>
    </field>
    <field name="list_show" type="radio" label="JBS_TCH_SHOW_LIST_VIEW" description="JBS_TCH_SHOW_LIST_VIEW_DESC" class="inputbox" default="0" required="true">
        <option value="0">JBS_CMN_NO</option>
        <option value="1">JBS_CMN_YES</option>
    </field>
    <field name="ordering" type="list" label="JBS_CMN_ORDERING"
			description="JBS_CMN_ORDERING_DESC" class="inputbox" size="1"
			default="0">
        <option value="0">0</option>
    </field>
    <field name="teachername" type="text" class="inputbox" size="60" label="JBS_CMN_TEACHER" description="JBS_TCH_TEACHER_DESC" required="true"/>
    <field name="title" type="text" class="inputbox" size="60" label="JBS_CMN_TITLE" description="JBS_TCH_TITLE_DESC"/>
    <field name="teacher_image" type="media" label="JBS_TCH_TEACHER_IMAGE" description ="JBS_TCH_TEACHER_IMAGE_DESC"/>
    <field name="teacher_thumbnail" type="media" label="JBS_TCH_TEACHER_THUMBNAIL" description ="JBS_TCH_TEACHER_THUMBNAIL_DESC"/>
    <field name="image" type="text" class="inputbox" size="60" label="JBS_TCH_LARGE_IMAGE_URL" description="JBS_TCH_LARGE_IMAGE_URL_DESC"/>
    <field name="phone" type="text" class="inputbox" size="60" label="JBS_TCH_PHONE" description="JBS_TCH_PHONE_DESC"/>
    <field name="website" type="text" class="inputbox" size="60" label="JBS_TCH_WEBSITE" description="JBS_TCH_WEBSITE_DESC"/>
    <field name="short" type="textarea" class="inputbox" cols="70" rows="3" label="JBS_TCH_SHORT_DESCRIPTION_LIST_PAGE" description="JBS_TCH_SHORT_DESCRIPTION_LIST_PAGE_DESC"/>
    <field name="thumb" type="text" class="inputbox" size="60" label="JBS_TCH_THUMBNAIL_URL" description="JBS_TCH_THUMBNAIL_URL_DESC"/>
    <field name="information" type="editor" class="inputbox" label="JBS_TCH_OTHER_INFORMATION" description="JBS_TCH_OTHER_INFORMATION_DESC"
			filter="ContentHelper::filterText" buttons="true" />
    <field name="asset_id" type="hidden" filter="unset" />
    <field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="false" class="inputbox" filter="rules"
			component="com_biblestudy" section="teacheredit" validate="rules"
		/>
</form>