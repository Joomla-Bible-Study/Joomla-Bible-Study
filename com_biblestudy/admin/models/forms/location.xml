<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field name="id"
               type="text"
               label="JGLOBAL_FIELD_ID_LABEL"
               description="JGLOBAL_FIELD_ID_DESC"
               size="10"
               default="0"
               readonly="true"
               class="readonly"
        />

        <field name="location_text"
               type="text"
               label="JBS_LOC_LOCATION_NAME"
               size="75"
               required="true"
        />

        <field name="published"
               type="list"
               class="span12 small"
               id="published"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               size="1"
               default="1"
               filter="integer">
            <option value="1">
                JPUBLISHED
            </option>
            <option value="0">
                JUNPUBLISHED
            </option>
            <option value="-2">
                JTRASHED
            </option>
        </field>
        <field name="landing_show" default="1" type="list" label="JBS_CMN_LANDING_SHOW"
               description="JBS_CMN_LANDING_SHOW_DESC">
            <option value="0">JBS_CMN_NO_SHOW_LANDING</option>
            <option value="1">JBS_CMN_SHOW_ABOVE_LANDING</option>
            <option value="2">JBS_CMN_SHOW_BELOW_LANDING</option>
        </field>
        <field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
               description="JBS_LOC_FIELD_LANGUAGE_DESC" class="inputbox">
            <option value="*">JALL</option>
        </field>

        <field name="version_note"
               type="text"
               label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
               description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
               class="span12" size="45"
               labelclass="control-label"
                />

        <field name="user_id"
               type="user"
               label="JBS_LOC_FIELD_LINKED_USER_LABEL"
               description="JBS_LOC_FIELD_LINKED_USER_DESC"
                />
        <field name="asset_id" type="hidden" filter="unset"/>
        <field name="rules" type="rules" label="JFIELD_RULES_LABEL"
               translate_label="false" class="inputbox" filter="rules" component="com_biblestudy"
               section="location" validate="rules"/>
        <field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
               description="JFIELD_ACCESS_DESC" class="span12 small" size="1"/>

        <field name="misc" type="editor"
               label="JBS_LOC_FIELD_INFORMATION_MISC_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_MISC_DESC"
               filter="JComponentHelper::filterText"
               buttons="true"
               hide="readmore,pagebreak"
                />

        <field name="created_by" type="user"
               label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JBS_LOC_FIELD_CREATED_BY_DESC" />

        <field name="created_by_alias" type="text"
               label="JBS_LOC_FIELD_CREATED_BY_ALIAS_LABEL" description="JBS_LOC_FIELD_CREATED_BY_ALIAS_DESC"
               size="20" />

        <field name="created" type="calendar" label="JBS_LOC_FIELD_CREATED_LABEL"
               description="JBS_LOC_FIELD_CREATED_DESC" size="22"
               format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

        <field name="modified" type="calendar" class="readonly"
               label="JGLOBAL_FIELD_MODIFIED_LABEL" description="JBS_LOC_FIELD_MODIFIED_DESC"
               size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

        <field name="modified_by" type="user"
               label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
               class="readonly"
               readonly="true"
               filter="unset"/>

        <field name="checked_out"
               type="hidden"
               filter="unset"
                />

        <field name="checked_out_time"
               type="hidden"
               filter="unset"
                />

        <field name="publish_up" type="calendar"
               label="JBS_LOC_FIELD_PUBLISH_UP_LABEL" description="JBS_LOC_FIELD_PUBLISH_UP_DESC"
               format="%Y-%m-%d %H:%M:%S" size="22"
               filter="user_utc"
                />

        <field name="publish_down" type="calendar"
               label="JBS_LOC_FIELD_PUBLISH_DOWN_LABEL" description="JBS_LOC_FIELD_PUBLISH_DOWN_DESC"
               format="%Y-%m-%d %H:%M:%S" size="22"
               filter="user_utc"
                />

        <field name="metakey"
               type="textarea"
               label="JFIELD_META_KEYWORDS_LABEL"
               description="JFIELD_META_KEYWORDS_DESC"
               rows="3"
               cols="30"
                />

        <field name="metadesc"
               type="textarea"
               label="JFIELD_META_DESCRIPTION_LABEL"
               description="JFIELD_META_DESCRIPTION_DESC"
               rows="3"
               cols="30"
                />
 
        <field name="language"
               type="contentlanguage"
               label="JFIELD_LANGUAGE_LABEL"
               description="JBS_LOC_FIELD_LANGUAGE_DESC"
               class="inputbox"
        >
            <option value="*">JALL</option>
        </field>

        <field name="featured"
               type="radio"
               class="btn-group btn-group-yesno"
               label="JFEATURED"
               description="JBS_LOC_FIELD_FEATURED_DESC"
               default="0"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
    </fieldset>
    <fieldset name="details" label="JBS_LOC_CONTACT_DETAILS">

        <field name="@text_details"
               type="note"
               label=""
               description="JBS_LOC_EDIT_DETAILS" />

        <field name="image"
               type="media"
               hide_none="1"
               label="JBS_LOC_FIELD_PARAMS_IMAGE_LABEL"
               description="JBS_LOC_FIELD_PARAMS_IMAGE_DESC"
                />

        <field name="con_position" type="text"
               label="JBS_LOC_FIELD_INFORMATION_POSITION_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_POSITION_DESC"
               size="30"
                />

        <field name="email_to" type="email"
               label="JGLOBAL_EMAIL"
               description="JBS_LOC_FIELD_INFORMATION_EMAIL_DESC"
               size="30"
                />

        <field name="address" type="textarea"
               label="JBS_LOC_FIELD_INFORMATION_ADDRESS_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_ADDRESS_DESC"
               rows="3"
               cols="30"
                />

        <field name="suburb" type="text"
               label="JBS_LOC_FIELD_INFORMATION_SUBURB_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_SUBURB_DESC"
               size="30"
                />

        <field name="state" type="text"
               label="JBS_LOC_FIELD_INFORMATION_STATE_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_STATE_DESC"
               size="30"
                />

        <field name="postcode" type="text"
               label="JBS_LOC_FIELD_INFORMATION_POSTCODE_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_POSTCODE_DESC"
               size="30"
                />

        <field name="country" type="text"
               label="JBS_LOC_FIELD_INFORMATION_COUNTRY_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_COUNTRY_DESC"
               size="30"
                />

        <field name="telephone" type="text"
               label="JBS_LOC_FIELD_INFORMATION_TELEPHONE_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_TELEPHONE_DESC"

               size="30"
                />

        <field name="mobile" type="text"
               label="JBS_LOC_FIELD_INFORMATION_MOBILE_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_MOBILE_DESC"
               size="30"
                />

        <field name="fax" type="text"
               label="JBS_LOC_FIELD_INFORMATION_FAX_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_FAX_DESC"
               size="30"
                />

        <field name="webpage"
               type="url"
               filter="url"
               label="JBS_LOC_FIELD_INFORMATION_WEBPAGE_LABEL"
               description="JBS_LOC_FIELD_INFORMATION_WEBPAGE_DESC"
               size="30"
                />

        <field name="sortname1" type="text"
               label="JBS_LOC_FIELD_SORTNAME1_LABEL"
               description="JBS_LOC_FIELD_SORTNAME1_DESC"
               size="30"
                />

        <field name="sortname2" type="text"
               label="JBS_LOC_FIELD_SORTNAME2_LABEL"
               description="JBS_LOC_FIELD_SORTNAME2_DESC"
               size="30" />

        <field name="sortname3" type="text"
               label="JBS_LOC_FIELD_SORTNAME3_LABEL"
               description="JBS_LOC_FIELD_SORTNAME3_DESC"
               size="30"
                />
    </fieldset>
    
</form>
