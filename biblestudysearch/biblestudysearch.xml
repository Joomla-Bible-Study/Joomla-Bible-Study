<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search" method="upgrade">
	<name>PLG_SEARCH_BIBLESTUDYSEARCH</name>
	<creationDate>May 17, 2011</creationDate>
	<author>Joomla Bible Study Team</author>
	<authorEmail>info@joomlabiblestudy.org</authorEmail>
	<authorUrl>http://www.JoomlaBibleStudy.org</authorUrl>
	<copyright>2007-11 Joomla Bible Study</copyright>
	<license>GNU/GPL</license>
	<version>Version 7.0.1</version>
	<description>PLG_SEARCH_BIBLESTUDYSEARCH_XML_DESCRIPTION</description>
	<files>
		<filename plugin="biblestudysearch">biblestudysearch.php</filename>
        <filename>index.html</filename>
        <folder>language</folder>
  </files>
    <config>
		<fields name="params">
            <fieldset name="basic">
    		<field name="search_limit" type="text" size="5" default="50" label="JBS_PLG_SEARCH_LIMIT" description="JBS_PLG_SEARCH_LIMIT_DESC" />
    		<field name="show_description" type="radio" default="1" label="JBS_PLG_SEARCH_DESCRIPTION" description="JBS_PLG_SEARCH_DESCRIPTION_DESC">
    			<option value="0">JBS_PLG_SEARCH_HIDE</option>
    			<option value="1">JBS_PLG_SEARCH_SHOW</option>
    		</field>
    		<field name="set_title" type="radio" default="1" label="JBS_PLG_SEARCH_TITLE" description="JBS_PLG_SEARCH_TITLE_DESC">
    			<option value="0">JBS_PLG_SEARCH_BOOK_FIRST</option>
    			<option value="1">JBS_PLG_SEARCH_STUDY_FIRST</option>
    		</field>
            <field name="search_content" type="radio"
					default="1"
					description="PLG_SEARCH_BIBLESTUDYSEARCH_FIELD_CONTENT_DESC"
					label="PLG_SEARCH_BIBLESTUDYSEARCH_FIELD_CONTENT_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="search_archived" type="radio"
					default="0"
					description="PLG_SEARCH_BIBLESTUDYSEARCH_FIELD_ARCHIVED_DESC"
					label="PLG_SEARCH_BIBLESTUDYSEARCH_FIELD_ARCHIVED_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
            </fieldset>
        </fields>
    </config>
    <!-- UPDATESERVER DEFINITION -->
	<updateservers>
		<!-- Note: No spaces or linebreaks allowed between the server tags -->
		<server type="extension" priority="1" name="Joomla Bible Study Update Site"><![CDATA[http://www.joomlabiblestudy.org/index.php?option=com_ars&amp;view=update&amp;task=stream&amp;format=xml&amp;id=4]]></server>
	</updateservers>
</extension>