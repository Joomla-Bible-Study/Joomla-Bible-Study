<?xml version="1.0" encoding="UTF-8"?>
<project name="package_jbs" default="build">
	<target name="clean">
		<echo msg="Cleaning directories" />
		<delete dir="packages" includeemptydirs="true" />
	</target>
	<target name="build">
		<echo msg="Building package" />
		<mkdir dir="packages" />
		<zip destfile="packages/com_biblestudy-7.1.0.zip" basedir="../com_biblestudy" />
		<zip destfile="packages/mod_biblestudy-7.1.0.zip" basedir="../mod_biblestudy" />
		<zip destfile="packages/plg_biblestudy_search-7.1.0.zip" basedir="../biblestudysearch" />
		<zip destfile="packages/plg_biblestudy_podcast-7.1.0.zip" basedir="../jbspodcast" />
		<zip destfile="com_biblestudy-7.1.0-pkg.zip">
			<fileset dir=".">
				<include name="packages/**" />
				<include name="com_biblestudy-pkg.xml" />
			</fileset>
		</zip>
	</target>
</project>
