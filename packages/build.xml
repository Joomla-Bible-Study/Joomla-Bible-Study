<?xml version="1.0" encoding="UTF-8"?>
<project name="package_jbs" default="build">
	<target name="clean">
		<echo msg="Cleaning directories" />
		<delete dir="packages" includeemptydirs="true" />
		<delete file="pkg_joomlabiblestudy.zip" />
	</target>

	<target name="build">
		<echo msg="Building package" />
		<mkdir dir="packages" />
		<zip destfile="packages/com_biblestudy.zip" basedir="../com_biblestudy" />
		<zip destfile="packages/mod_biblestudy.zip" basedir="../mod_biblestudy" />
		<zip destfile="packages/biblestudysearch.zip" basedir="../biblestudysearch" />
		<zip destfile="packages/jbs_sermon_speaker_convert.zip" basedir="../jbs_sermon_speaker_convert" />
		<zip destfile="packages/jbspodcast.zip" basedir="../jbspodcast" />
		<zip destfile="pkg_joomlabiblestudy.zip">
			<fileset dir=".">
				<include name="packages/**" />
				<include name="pkg_joomlabiblestudy.xml" />
			</fileset>
		</zip>
	</target>
</project>
