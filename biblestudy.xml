  <installfile>biblestudy.install.php</installfile>
  <!-- Deprecated in 1.6 -->
  <uninstallfile>biblestudy.uninstall.php</uninstallfile>
  <!-- Deprecated in 1.6 -->
  <install>
    <sql>
      <!--  <file driver="mysql" charset="utf8">install/sql/jbs7.0.0.sql</file> -->
    </sql>
  </install>
