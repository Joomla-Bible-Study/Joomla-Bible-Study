  <filename>biblestudy.xml</filename>
  <filename>biblestudy.install.php</filename>
  <filename>biblestudy.uninstall.php</filename>
  <files folder="site">
    <filename>index.html</filename>
    <filename>metadata.xml</filename>
    <filename>biblestudy.php</filename>
