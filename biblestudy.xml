  <languages folder="site/languages">
    <language tag="en-GB">en-GB.com_biblestudy.ini</language>
    <language tag="cs-CS">cs-CS.com_biblestudy.ini</language>
    <language tag="de-DE">de-DE.com_biblestudy.ini</language>
