      <menu link="option=com_biblestudy&amp;view=sharelist">JBS_MNU_SOCIAL_NETWORK_LINKS</menu>
      <menu link="option=com_biblestudy&amp;view=admin&amp;layout=form">JBS_MNU_ADMINISTRATION</menu>
      <menu link="option=com_biblestudy&amp;view=cssedit">JBS_MNU_CSS_EDIT</menu>
