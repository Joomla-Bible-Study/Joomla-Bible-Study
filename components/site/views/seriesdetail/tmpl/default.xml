<metadata>
	<layout title="JBS_MNU_SINGLE_SERIES_LAYOUT">
		<message>
			<![CDATA[JBS_MNU_SINGLE_SERIES_LAYOUT_TT]]>
		</message>
	</layout>
	<state>
		<name>JBS_MNU_SINGLE_SERIES_LAYOUT</name>
		<url addpath="/administrator/components/com_biblestudy/elements">
			<param name="id" type="series" default="" label="JBS_CMN_SELECT_SERIE" description="JBS_MNU_SELECT_SERIES_TT" />
		</url>
		<params addpath="/components/com_biblestudy/elements">
			<param name="type" type="hidden" default="" />
			<param name="templatemenuid" type="templatemenuid" default="" label="JBS_MNU_SELECT_TEMPLATE" description="JBS_MNU_SELECT_TEMPLATE_TT" />
		</params>	
	</state>
     <fields name="request">
        <fieldset name="request"
            addfieldpath="/administrator/components/com_biblestudy/models/fields"
        >
            <field name="id" type="modal_seriesdetail"
				description="JBS_MNU_SELECT_SERIES_TT"
				label="JBS_CMN_SELECT_SERIE"
				required="true"
			/>
            <field name="templatemenuid" type="sql"
                description="JBS_MNU_SELECT_TEMPLATE_TT"
                label="JBS_MNU_SELECT_TEMPLATE"
                default="1"
                query="SELECT id, title FROM #__bsms_templates WHERE published = 1 ORDER BY text ASC"
                key_field="id"
                value_field="title"
                required="true"
            />
        </fieldset>
    
    </fields>
</metadata>

