<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
	<field name="published" type="radio" label="JBS_CMN_PUBLISHED" description="JBS_CMN_PUBLISHED_DESC" class="inputbox" default="0" required="true">
		<option value="0">No</option>
		<option value="1">Yes</option>
	</field>
	
	<field name="createdate" type="calendar" label="JBS_CMN_CREATE_DATE_YMD_HMS"
			description="JBS_CMN_CREATE_DATE_YMD_HMS_DESC" class="inputbox" size="22"
			format="%Y-%m-%d %H:%:%i" filter="user_utc" required="true"/>		
			
	<field name="study_id" type="study" extension="com_biblestudy"
		label="JBS_CMN_STUDY" description="JBS_CMN_STUDY_DESC"
		class="inputbox" required="true"/>	
	</fieldset>
	
	<field name="plays"  type="text" class="readonly" label="JBS_CMN_PLAYS"
			description ="JBS_CMN_PLAYS_DESC" size="10" default="N/A" 
			readonly="true"  />
	
	<field name="downloads"  type="text" class="readonly" label="JBS_CMN_DOWNLOADS"
			description ="JBS_CMN_DOWNLOADS_DESC" size="10" default="N/A" 
			readonly="true"  />
	
	<field name="ordering" type="list" label="JBS_CMN_ORDERING"
			description="JBS_CMN_ORDERING_DESC" class="inputbox" size="1"
			default="0">
		<option value="0">0</option>
	</field>
	
	<field name="docMan_id" type="study" extension="com_biblestudy"
		label="JBS_MED_USE_DOCMAN" description="JBS_MED_USE_DOCMAN_DESC"
		class="inputbox" required="false"/>	
		
	<field name="article_id" type="study" extension="com_biblestudy"
		label="JBS_MED_USE_ARTICLE" description="JBS_MED_USE_ARTICLE_DESC"
		class="inputbox" required="false"/>	
	
	<field name="player" type="list" label="JBS_MED_PLAYER"
			description="JBS_MED_PLAYER_DESC" class="inputbox" size="1"
			default="100">
		<option value="100">JBS_CMN_USE_GLOBAL</option>
		<option value="0">JBS_CMN_DIRECT_LINK</option>
		<option value="1">JBS_CMN_USE_INTERNAL_PLAYER</option>
		<option value="3">JBS_CMN_USE_AV</option>
		<option value="7">JBS_CMN_USE_LEGACY_PLAYER</option>
	</field>
	
	<field name="popup" type="list" label="JBS_MED_INTERNAL_POPUP"
			description="JBS_MED_INTERNAL_POPUP_DESC" class="inputbox" size="1"
			default="100">
		<option value="3">JBS_CMN_USE_GLOBAL</option>
		<option value="1">JBS_CMN_POPUP</option>
		<option value="2">JBS_CMN_INLINE</option>
	</field>
	
	<field name="mediacode" type="text" label="JBS_CMN_AVR"
			description="JBS_MED_AVRELOADED_TT" class="inputbox" size="100" />

</form>
